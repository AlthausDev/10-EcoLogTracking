<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="c:\temp\nlog-internal.log">

	<targets>
		<target xsi:type="File"
                name="logfile"
                fileName="${basedir}/logs/log-api-${shortdate}.txt"
                layout="${longdate} [${level:uppercase=true}] ${message}"
                archiveEvery="Day"
                archiveNumbering="Rolling"
                maxArchiveFiles="7"
                concurrentWrites="true"/>

		<target name="database"
        xsi:type="Database"
	    connectionString="Server=ECO3018;DATABASE=DBEcoLogTracking;User Id=sa; Password=sa;TrustServerCertificate=True">
        commandType="StoredProcedure"
        <commandText>INSERT INTO [dbo].[NLog] (
    [MachineName],
    [Logged],
    [Level],
    [Message],
    [Logger],
	[method],
	[Stacktrace],
	[File_name],
	[All_event_properties]
  ) VALUES (
    @machineName,
    @logged,
    @level,
    @message,
    @logger,
    @method,
	@stacktrace,
	@filename,
	@alleventproperties
  );</commandText>
        >
			<parameter name="@machineName"    layout="${machinename}"/>
			<parameter name="@logged"         layout="${date}"/>
			<parameter name="@level"          layout="${level}"/>
			<parameter name="@message"        layout="${message}"/>
			<parameter name="@logger"         layout="${logger}"/>
			<parameter name="@method"         layout="${aspnet-request-method}"/>
			<parameter name="@stacktrace"     layout="${stacktrace}" />
			<parameter name="@filename"       layout="${callsite-filename}"/>
			<parameter name="@allEventProperties"  layout="${all-event-properties}"/>
		</target>
	</targets>

	<rules>
		<logger name="EcoLogTracking.*" minlevel="debug" writeTo="database" />		
		<logger name="*" minlevel="Trace" writeTo="logfile" />
	</rules>
</nlog>
