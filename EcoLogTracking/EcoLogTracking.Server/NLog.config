<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="c:\temp\nlog-internal.log">

	<targets>
		<target xsi:type="File"
                name="logfile"
                fileName="${basedir}/logs/log-api-${shortdate}.txt"
                layout="${longdate} [${level:uppercase=true}] ${message}"
                archiveEvery="Day"
                archiveNumbering="Rolling"
                maxArchiveFiles="7"
                concurrentWrites="true"/>

		<target name="db"
        xsi:type="Database"
	    connectionString="${configsetting:item=ConnectionStrings.EcoLogTrackingDB}">
        commandType="StoredProcedure"
        commandText="[dbo].[NLog_AddEntry_p]"
        >
			<parameter name="@machineName"    layout="${machinename}" />
			<parameter name="@logged"         layout="${date}" />
			<parameter name="@level"          layout="${level}" />
			<parameter name="@message"        layout="${message}" />
			<parameter name="@logger"         layout="${logger}" />
			<parameter name="@method"         layout="${aspnet-request-method}" />
			
		</target>
	</targets>

	<rules>
		<logger name="EcoLogTracking.Server.*" minlevel="Info" writeTo="database" />		
		<logger name="EcoLogTracking.Server.*" minlevel="Trace" writeTo="logfile" />
	</rules>
</nlog>
